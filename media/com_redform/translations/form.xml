<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>redFORM Forms</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>3.3.14</version>
	<description>forms Table Definition for the redFORM extension</description>
	<reference>
		<table name="rwf_forms">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="formname" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Form Name</field>
			<field name="submissionsubject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Submitter notification mail subject</field>
			<field name="submissionbody" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Submitter notification mail body</field>
			<field name="contactpersonemail" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Contact notification mail recipient</field>
			<field name="admin_notification_email_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Admin notification mail subject</field>
			<field name="admin_notification_email_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Admin notification mail body</field>
			<field name="confirmation_contactperson_subject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Contact confirmation mail subject</field>
			<field name="confirmation_contactperson_body" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Contact confirmation mail body</field>
			<field name="confirmation_notification_recipients" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Confirmation mail notification recipients</field>
			<field name="notificationtext" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Notification text</field>
			<field name="currency" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">form currency</field>
			<field name="paymentprocessing" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Payment processing text</field>
			<field name="paymentaccepted" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Payment accepted text</field>
			<field name="contactpaymentnotificationsubject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Contact payment notification mail subject</field>
			<field name="contactpaymentnotificationbody" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Contact payment notification mail body</field>
			<field name="submitterpaymentnotificationsubject" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Submitter payment notification mail subject</field>
			<field name="submitterpaymentnotificationbody" type="htmltext" translate="1" alwaysFallback="false" filter="RAW" description="">Submitter payment notification mail body</field>
		</table>
		<component>
			<editForm admin="true" option="com_redform" view="form" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>

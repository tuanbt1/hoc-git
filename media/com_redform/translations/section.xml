<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>redFORM Sections</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>3.3.14</version>
	<description>Sections Table Definition for the redFORM extension</description>
	<reference>
		<table name="rwf_section">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="name" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Section Name</field>
			<field name="description" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Section Description</field>
		</table>
		<component>
			<editForm admin="true" option="com_redform" view="section" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>

<?xml version="1.0"?>
<contentelement type="contentelement">
	<name>redFORM Fields</name>
	<author>redCOMPONENT</author>
	<copyright>Copyright (C) 2008 - 2016 redCOMPONENT.com. All rights reserved.</copyright>
	<version>3.3.14</version>
	<description>Fields Table Definition for the redFORM extension</description>
	<reference>
		<table name="rwf_fields">
			<field name="id" type="referenceid" translate="0" alwaysFallback="false" filter="RAW" description="">ID</field>
			<field name="field" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Field Name</field>
			<field name="field_header" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Field Header</field>
			<field name="tooltip" type="text" translate="1" alwaysFallback="false" filter="RAW" description="">Tooltip</field>
		</table>
		<component>
			<editForm admin="true" option="com_redform" view="form" layout="edit" identifier="id" showbutton="true" htmlposition=".btn-toolbar:first .btn-group:first" checkoriginalid="false"/>
		</component>
	</reference>
</contentelement>

<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/redform/form/fields">
		<field
				name="id"
				type="hidden"
				default="0"
				label=""
				description=""
				readonly="true"
				/>
		<field
				name="cart_id"
				type="hidden"
				default="0"
				label=""
				description=""
				/>
		<field
				name="fullname"
				type="text"
				label="COM_REDFORM_FORMS_XML_BILLING_FULLNAME"
				description="COM_REDFORM_FORMS_XML_BILLING_FULLNAME_DESC"
				required="true"
				maxlength="150"
				/>
		<field
				name="company"
				type="text"
				label="COM_REDFORM_FORMS_XML_BILLING_COMPANY"
				description="COM_REDFORM_FORMS_XML_BILLING_COMPANY_DESC"
				required="false"
				maxlength="150"
				/>
		<field
				name="iscompany"
				type="radio"
				class="btn-group btn-group-yesno"
				label="COM_REDFORM_FORMS_XML_BILLING_ISCOMPANY"
				description="COM_REDFORM_FORMS_XML_BILLING_ISCOMPANY_DESC"
				default="0"
				>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
				name="vatnumber"
				type="text"
				label="COM_REDFORM_FORMS_XML_BILLING_VATNUMBER"
				description="COM_REDFORM_FORMS_XML_BILLING_VATNUMBER_DESC"
				required="false"
				maxlength="255"
				/>
		<field
				name="address"
				type="textarea"
				label="COM_REDFORM_FORMS_XML_BILLING_ADDRESS"
				description="COM_REDFORM_FORMS_XML_BILLING_ADDRESS_DESC"
				required="false"
				/>
		<field
				name="city"
				type="text"
				label="COM_REDFORM_FORMS_XML_BILLING_CITY"
				description="COM_REDFORM_FORMS_XML_BILLING_CITY_DESC"
				required="false"
				maxlength="255"
				/>
		<field
				name="zipcode"
				type="text"
				label="COM_REDFORM_FORMS_XML_BILLING_ZIPCODE"
				description="COM_REDFORM_FORMS_XML_BILLING_ZIPCODE_DESC"
				required="false"
				maxlength="255"
				/>
		<field
				name="phone"
				type="text"
				label="COM_REDFORM_FORMS_XML_BILLING_PHONE"
				description="COM_REDFORM_FORMS_XML_BILLING_PHONE_DESC"
				required="false"
				maxlength="255"
				/>
		<field
				name="email"
				type="text"
				label="COM_REDFORM_FORMS_XML_BILLING_EMAIL"
				description="COM_REDFORM_FORMS_XML_BILLING_EMAIL_DESC"
				required="true"
				maxlength="255"
				/>
		<field
				name="country"
				type="rcountry"
				label="COM_REDFORM_FORMS_XML_BILLING_COUNTRY"
				description="COM_REDFORM_FORMS_XML_BILLING_COUNTRY_DESC"
				required="true"
				maxlength="255"
				/>
	</fieldset>
</form>

<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_REDCORE_FILTER_SEARCH_DESC"
			placeholder="JSEARCH_FILTER"
			class="js-enter-submits"
			/>
		<field
			name="published"
			type="rpublished"
			onchange="this.form.submit();"
			label="COM_REDSLIDER_FILTER_PUBLISHED"
			statuses="0,1"
			>
			<option value="">COM_REDSLIDER_FILTER_PUBLISHED</option>
		</field>
		<field name="section"
			type="rlsectionlist"
			label="COM_REDSLIDER_TEMPLATE_SECTION"
			required="true"
			onchange="this.form.submit();"
			description="COM_REDSLIDER_TEMPLATE_SECTION_DESC"
			>
			<option value="">COM_REDSLIDER_SELECT</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="templates_limit"
			type="rlimitbox"
			class="inputbox input-mini chzn"
			default="25"
			label="JGLOBAL_ORDERING_LIST_LIMIT"
			description="JGLOBAL_ORDERING_LIST_LIMIT_DESC"
			onchange="this.form.submit();" />
	</fields>
</form>
<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="gallery-information">
		<field
				name="id"
				type="hidden"
				default="0"
				class="readonly"
				readonly="true"
				/>
		<field
				name="title"
				type="text"
				default=""
				label="COM_REDSLIDER_GALLERY_TITLE"
				required="true"
				class="input-normal"
				description="COM_REDSLIDER_GALLERY_TITLE_DESC"
				message="COM_REDSLIDER_GALLERY_TITLE_DESC"
				/>
		<field
				name="alias"
				type="text"
				class="input-normal"
				label="COM_REDSLIDER_GALLERY_ALIAS"
				description="COM_REDSLIDER_GALLERY_ALIAS_DESC"
				/>
		<field name="published" type="radio"
			   label="JPUBLISHED"
			   class="btn-group"
			   default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
	</fieldset>
</form>